<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result_activity"
    android:background="#0279F8">

    <TextView
        android:id="@+id/textView"
        android:layout_width="353dp"
        android:layout_height="104dp"
        android:fontFamily="@font/akaya_telivigala"
        android:gravity="center_horizontal"
        android:text="Hey Congratulations!!"
        android:textAlignment="center"
        android:textColor="#FAF9F9"
        android:textSize="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.526"
        app:layout_goneMarginTop="20dp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="140dp"
        android:layout_height="54dp"
        android:fontFamily="@font/akaya_telivigala"
        android:gravity="center_horizontal"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="#FDFBFB"
        android:textSize="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.561" />

    <Button
        android:id="@+id/button"
        android:layout_width="151dp"
        android:layout_height="66dp"
        android:background="@drawable/endbutton_bg"
        android:fontFamily="@font/akaya_telivigala"
        android:onClick="end"
        android:text="End"
        android:textAllCaps="false"
        android:textColor="#0279F8"
        android:textSize="30dp"
        app:backgroundTint="#FAFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.882" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="397dp"
        android:layout_height="504dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/end" />

    <TextView
        android:id="@+id/marks"
        android:layout_width="312dp"
        android:layout_height="41dp"
        android:text="You got 10 out 10 marks"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="@font/akaya_telivigala"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64"
        android:gravity="center_horizontal" />
</androidx.constraintlayout.widget.ConstraintLayout>